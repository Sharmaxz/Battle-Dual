<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="@string/login_sign_in"
            android:textSize="@dimen/registration_sign_in_font"
            android:fontFamily="@font/agency_fb_bold"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:gravity="center">

        <TextView
                android:id="@+id/txtError"
                android:text="@string/login_error"
                android:textSize="@dimen/registration_error_font"
                android:fontFamily="@font/agency_fb_bold"
                android:visibility="gone"
                android:textColor="@android:color/holo_red_light"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
                android:hint=" "
                android:textColorHint="@color/darkGray"
                android:layout_marginTop="@dimen/registration_email_layout_marginTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppTheme.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:hint="@string/login_hint_email"
                    android:textSize="@dimen/registration_font"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/agency_fb"
                    android:paddingTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:hint=" "
                android:textColorHint="@color/darkGray"
                android:layout_marginTop="@dimen/registration_password_layout_marginTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppTheme.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:inputType="textVisiblePassword"
                    android:hint="@string/login_hint_password"
                    android:textSize="@dimen/registration_font"
                    android:fontFamily="@font/agency_fb"
                    android:paddingTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <Button
            android:id="@+id/btnLogin"
            android:text="@string/login_button"
            android:textSize="@dimen/registration_button_font"
            android:textColor="@color/white"
            android:fontFamily="@font/agency_fb"
            android:background="@drawable/gradient_button"
            android:layout_margin="@dimen/registration_button_marginTop"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
    </Button>

    <TextView
            android:id="@+id/btnRegistration"
            android:text="@string/login_create"
            android:textSize="@dimen/registration_button_create_font"
            android:fontFamily="@font/agency_fb"
            android:textColor="#A3A3A3"
            android:textAlignment="center"
            android:layout_margin="@dimen/registration_button_create_marginTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"/>

</LinearLayout>

